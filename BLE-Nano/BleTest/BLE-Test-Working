#include <SoftwareSerial.h> //Import SoftwareSerial library
SoftwareSerial mySerial(8, 9); //Create software serial on pins 8 and 9

char w = ' ';
boolean NL = true;

void setup() {
  Serial.begin(9600);
  mySerial.begin(9600);
}

void loop() {
  if (mySerial.available()) {
    w = mySerial.read();
    Serial.write(w);
    mySerial.println("OK"); 
  }

  if (Serial.available()) {
    w = Serial.read();
    mySerial.write(w);

    if (NL) {
      Serial.print(">");
      NL = false;
    }
    Serial.write(w);
    if (w == 10) {
      NL = true;
    }
  }
}
